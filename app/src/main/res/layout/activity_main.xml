<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gift"
    tools:context="com.amlo.shopping.MainActivity">

            <TextView
                android:id="@+id/amlo_app"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/sunshiney"
                android:text="Amlooo"
                android:layout_centerHorizontal="true"
                android:textColor="@color/btn_background"
                android:textSize="70sp" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_below="@id/amlo_app"
                android:layout_marginEnd="40dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/amita"
                android:text="Whatever you’ve got in mind, we’ve got inside."
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
    <Button
        android:id="@+id/join_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/input_design"
        android:fontFamily="@font/adamina"
        android:padding="20dp"
        android:text="Join Now"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/adamina"
        android:padding="20dp"
        android:text="Already have an Account? Login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
</RelativeLayout>
