<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile"
    tools:context="com.amlo.shopping.fragment.EditProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_img"
            android:padding="20dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/emailid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="15"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_img"
                android:fontFamily="@font/adamina"
                android:padding="8dp"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"
                android:textColorHint="#FDF9F9"/>

            <EditText
                android:id="@+id/address_of_user_addr1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:hint="Address Line 1"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"
                android:textColorHint="#FDF9F9"/>
            <EditText
                android:id="@+id/address_of_user_addr2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:hint="Address Line 2"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"
                android:textColorHint="#FDF9F9"/>
            <EditText
                android:id="@+id/address_of_user_locality"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:hint="Locality"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"
                android:textColorHint="#FDF9F9"/>

            <EditText
                android:id="@+id/address_of_user_state"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:hint="State - Zipcode"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"
                android:textColorHint="#FDF9F9"/>

            <EditText
                android:id="@+id/phoneid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_img"
                android:ems="15"
                android:fontFamily="@font/adamina"
                android:hint="Phone"
                android:inputType="phone"
                android:paddingStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FDF9F9"
                android:textColorHint="#FDF9F9"/>

            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_design"
                android:ems="15"
                android:textColor="@android:color/white"
                android:fontFamily="@font/adamina"
                android:paddingStart="10dp"
                android:text="Save"
                android:layout_marginBottom="80dp"
                android:textAlignment="center"/>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
