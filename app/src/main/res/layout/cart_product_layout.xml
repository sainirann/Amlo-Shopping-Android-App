<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc_img_layout"
        android:background="@color/textBoxBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/display_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/not_found" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name_cart_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:textColor="@color/nav_header_color"
                android:text="Product Name"/>
            <TextView
                android:id="@+id/product_desc_cart_view"
                android:layout_width="match_parent"
                android:textColor="@color/nav_header_color"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="Product Desc"/>

            <TextView
                android:id="@+id/product_price_cart_view"
                android:layout_width="match_parent"
                android:textColor="@color/product_display_start"
                android:layout_height="wrap_content"
                android:text="$0"/>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/qty_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                app:backGroundColor="@color/nav_header_color"
                app:textSize="8sp"/>
        </LinearLayout>





    </LinearLayout>


</RelativeLayout>